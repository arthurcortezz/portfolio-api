{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es5",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "rootDir": "./src",
      "types": ["node"],
      "typeRoots": ["node_modules/@types"],
      "allowJs": true,
      "declaration": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  